[user]
	name = Mike
	email = ezuratechan@gmail.com
[alias]
	co = checkout
	ci = commit
	st = status
	b = branch
	di = diff
	dc = diff --cached
	amend = commit --amend
	aa = add --all
	head = !git l -1
	h = !git head
	r = !git l -20
	ra = !git r --all
	ff = merge --ff-only
	pullff = pull --ff-only
	noff = merge --no-ff
    
   	ds = diff --state=160,120
	dh1 = diff HEAD~1
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	type = cat-file -t
    dump = cat-file -p

    pom = push origin master
	pod = push origin development
	pod2 = push origin development-2
	pod3 = push origin development-3
    pod5 = push origin development-5
    pd5c = push origin development-5-cleanup

    noff = merge --no-ff
    div = divergence
    gn = goodness
    gnc = goodness --cached
    fa = fetch --all
    b = branch
    ds = diff --stat=160,120
    dh1 = diff HEAD~1

    l = "!source ~/.githelpers && pretty_git_log"
    la = !git l --all
    r = !git l -30
    ra = !git r --all

[merge]
	tool = vimdiff

